---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Bio from '../components/Bio.astro';
import HomeProjects from '../components/HomeProjects.astro';
import QuickLinks from '../components/QuickLinks.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="h-screen max-w-[40%] m-auto bg-black text-white flex flex-col items-center justify-between">
		<Header />
    <Bio />
    <HomeProjects />
    <QuickLinks />
		<Footer />
	</body>
</html>
